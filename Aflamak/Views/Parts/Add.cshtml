@model Part
@{
    ViewData["Title"] = "Add Part";
}
@{
    var data1 = ViewBag.MyBag1 as SelectList;
    var modified1 = new SelectList(data1.Items, data1.DataValueField, data1.DataTextField);
    modified1 = new SelectList(modified1.Prepend(new SelectListItem("اختر مسلسل", "")), "Value", "Text");
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">إضافة جزء</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EpisodesNo"></label>
            <input asp-for="EpisodesNo" class="form-control" />
            <span asp-validation-for="EpisodesNo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NoOfLikes"></label>
            <input asp-for="NoOfLikes" class="form-control" />
            <span asp-validation-for="NoOfLikes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Month"></label>
            <input asp-for="Month" class="form-control" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NoOfLikes"></label>
            <input asp-for="NoOfLikes" class="form-control" />
            <span asp-validation-for="NoOfLikes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NoOfDisLikes"></label>
            <input asp-for="NoOfDisLikes" class="form-control" />
            <span asp-validation-for="NoOfDisLikes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TvShowId"></label>
            <select asp-for="TvShowId" class="form-select" asp-items="modified1"></select>
            <span asp-validation-for="TvShowId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="clientFile"></label>
            <div class="file-input-container mb-3">
                <input type="file" asp-for="clientFile" id="fileInput" />
                <label for="fileInput">اختر ملف</label>
                <span class="file-name">لم يتم اختيار ملف</span>
            </div>
            <span asp-validation-for="clientFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">حفظ</button>
        <a asp-action="Index" asp-controller="Parts" class="btn btn-secondary">
            العوده الي قائمة الأجزاء
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    document.getElementById('fileInput').addEventListener('change', function (event) {
        const fileName = event.target.files[0] ? event.target.files[0].name : 'لم يتم اختيار ملف';
        document.querySelector('.file-name').textContent = fileName;
    });
</script>